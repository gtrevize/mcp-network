{
  "name": "mcp-network",
  "version": "1.0.0",
  "description": "MCP server for remote network testing with comprehensive security features",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && chmod +x dist/index.js && chmod +x dist/client/index.js && chmod +x dist/config/cli.js",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "client": "node dist/client/index.js",
    "dev:client": "tsx src/client/index.ts",
    "config": "node dist/config/cli.js",
    "dev:config": "tsx src/config/cli.ts",
    "generate-token": "node scripts/generate-token.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepare": "npm run build"
  },
  "bin": {
    "mcp-network-cli": "./dist/client/index.js",
    "mcp-config": "./dist/config/cli.js"
  },
  "keywords": [
    "mcp",
    "network",
    "testing",
    "ping",
    "traceroute",
    "whois",
    "dns",
    "ssl",
    "tls",
    "nmap",
    "tcpdump",
    "iperf"
  ],
  "author": "robursoft",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "acme-client": "^5.4.0",
    "axios": "^1.7.9",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "dotenv": "^17.2.3",
    "inquirer": "^10.2.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "node-forge": "^1.3.1",
    "ora": "^8.2.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.1",
    "@types/node-forge": "^1.3.11",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "test-exclude": "^7.0.1"
  }
}
