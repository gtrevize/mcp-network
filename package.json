{
  "name": "@gtrevize/mcp-network",
  "version": "0.1.0",
  "description": "Comprehensive MCP (Model Context Protocol) server for AI agents to perform network testing and validation with built-in security and authentication",
  "main": "dist/index.js",
  "type": "module",
  "homepage": "https://github.com/gtrevize/mcp-network#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/gtrevize/mcp-network.git"
  },
  "bugs": {
    "url": "https://github.com/gtrevize/mcp-network/issues"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js && chmod +x dist/client/index.js && chmod +x dist/config/cli.js && chmod +x dist/rest-api/server.js",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "api": "node dist/rest-api/server.js",
    "dev:api": "tsx src/rest-api/server.ts",
    "dev:both": "concurrently -n \"MCP,API\" -c \"cyan,green\" \"npm run dev\" \"npm run dev:api\"",
    "start:both": "concurrently -n \"MCP,API\" -c \"cyan,green\" \"npm start\" \"npm run api\"",
    "client": "node dist/client/index.js",
    "dev:client": "tsx src/client/index.ts",
    "config": "node dist/config/cli.js",
    "dev:config": "tsx src/config/cli.ts",
    "generate-token": "node scripts/generate-token.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepare": "npm run build"
  },
  "bin": {
    "mcp-network-cli": "./dist/client/index.js",
    "mcp-config": "./dist/config/cli.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "network-testing",
    "ai-agents",
    "ping",
    "traceroute",
    "whois",
    "dns",
    "ssl",
    "tls",
    "nmap",
    "tcpdump",
    "iperf",
    "network-diagnostics",
    "server-validation",
    "cloud-deployment",
    "jwt-authentication",
    "security",
    "devops",
    "infrastructure"
  ],
  "author": {
    "name": "Golan Trevize",
    "email": "gtrevize66@protonmail.com",
    "url": "https://github.com/gtrevize"
  },
  "license": "MIT",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "VERSION",
    "config.json.sample",
    "env.sample",
    "docs/**/*"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "acme-client": "^5.4.0",
    "axios": "^1.7.9",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cheerio": "^1.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "inquirer": "^10.2.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "node-forge": "^1.3.1",
    "ora": "^8.2.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.1",
    "@types/node-forge": "^1.3.11",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.15.0",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "test-exclude": "^7.0.1"
  }
}
