{
  "name": "mcp-network",
  "version": "1.0.0",
  "description": "MCP server for remote network testing with comprehensive security features",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "network",
    "testing",
    "ping",
    "traceroute",
    "whois",
    "dns",
    "ssl",
    "tls",
    "nmap",
    "tcpdump",
    "iperf"
  ],
  "author": "robursoft",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.13.3",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "axios": "^1.7.9",
    "acme-client": "^5.4.0",
    "node-forge": "^1.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node-forge": "^1.3.11",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
